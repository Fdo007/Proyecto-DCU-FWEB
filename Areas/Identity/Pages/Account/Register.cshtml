@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Cree una cuenta.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="Input.Nombre" class="form-control" autocomplete="Nombre" aria-required="true" />
                <label asp-for="Input.Nombre"></label>
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
                </div>
                <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="Input.SegundoNombre" class="form-control" autocomplete="SegundoNombre" aria-required="true" />
                <label asp-for="Input.SegundoNombre"></label>
                <span asp-validation-for="Input.SegundoNombre" class="text-danger"></span>
                </div>
                </div>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="Input.Apellido" class="form-control" autocomplete="Apellido" aria-required="true" />
                <label asp-for="Input.Apellido"></label>
                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
                <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                </div>
            </div>
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrarse</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
